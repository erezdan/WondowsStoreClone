<Window x:Class="WondowsStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WondowsStoreClone"
        xmlns:uc="clr-namespace:WondowsStoreClone.UserControls"
        mc:Ignorable="d"
        Name="MainWindowMetro"
        Title="MainWindow" Height="800" Width="1350">
    <Grid>
        <Frame x:Name="MainWindowFrame"
               Loaded="MainWindowFrame_Loaded"
               NavigationUIVisibility="Hidden"
               Width="{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}"
               Visibility="Hidden"/>
        <uc:AppDetaildTitleAndBackground></uc:AppDetaildTitleAndBackground>
    </Grid>
</Window>
