<UserControl x:Class="WondowsStoreClone.UserControls.AnApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WondowsStoreClone.UserControls"
             mc:Ignorable="d" 
             Height="335" Width="210" Margin="7,7,7,7">
    <Grid Name="UpperGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="ProductImage" Source="/Images/001-mail inbox app.png" MouseUp="ProductImage_MouseUp"/>
        <Grid x:Name="BottomGrid" 
              Grid.Row="1" 
              Grid.Column="1" 
              Background="#1F1F1F"
              MouseUp="ProductImage_MouseUp">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"></RowDefinition>
                <RowDefinition Height="0.25*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="AppNameText"
                       Grid.Row="0" 
                       Grid.Column="0"
                       VerticalAlignment="Top"
                       FontSize="26"
                       Foreground="White"
                       Text="Zoom Rooms"
                       TextWrapping="Wrap"
                       Margin="2"/>
            <TextBlock x:Name="AppPriceText"
                       Grid.Row="1" 
                       Grid.Column="1"
                       VerticalAlignment="Bottom"
                       FontSize="20"
                       Foreground="White"
                       Text="Free"
                       TextWrapping="Wrap"
                       Margin="2"/>
        </Grid>
    </Grid>
</UserControl>
