<UserControl x:Class="WondowsStoreClone.UserControls.ZoomedImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:WondowsStoreClone.UserControls"
             xmlns:class="clr-namespace:WondowsStoreClone"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <uc:ZoomBorder x:Name="border"
                          ClipToBounds="True"
                          Background="Gray">
            <Image x:Name="ImageControl"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Stretch="Fill"
                   Margin="2,2,2,2"></Image>
        </uc:ZoomBorder>
    </DockPanel>
</UserControl>
